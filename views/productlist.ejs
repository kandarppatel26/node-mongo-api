<div>
   <label>Name:</label>
   <input type="text" ng-model="yourName" placeholder="Enter a name here">
</div>

<div class="container" ng-controller="ProductController">
         <ul><li ng-repeat="prod in products |filter:yourName|orderBy:orderProp">
		 <a href="#/product/{{prod._id}}">{{prod.title|uppercase}}</a>-{{prod._id}}</li></ul>
</div>